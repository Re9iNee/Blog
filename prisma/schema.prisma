// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("AWS_POSTGRES_URL")
}

enum PostStatus {
  draft
  removed
  published
}

model Post {
  id Int @id @default(autoincrement())

  readingTime  Int
  authorId     Int
  title        String
  summery      String
  body         String?
  mainImageUrl String?
  publishedAt  DateTime?
  categories   Category[]
  updatedAt    DateTime   @updatedAt
  status       PostStatus @default(draft)
  createdAt    DateTime   @default(now())
  author       User       @relation(fields: [authorId], references: [id])

  @@map("posts")
}

model User {
  id Int @id @default(autoincrement())

  name      String
  posts     Post[]
  avatarUrl String?
  email     String   @unique
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@map("users")
}

model Category {
  id Int @id @default(autoincrement())

  posts     Post[]
  name      String   @unique
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@map("categories")
}
