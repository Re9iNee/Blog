generator client {
  provider = "prisma-client-js"
}

// TODO: Enable acceleration
// URL: https://console.prisma.io/clp6szjiz003tmr0g5sapq6xy/clp6szphd003wmr0go8uvw9t5/accelerate/insights?from=last24h
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("AWS_POSTGRES_URL")
}

model Post {
  id Int @id @default(autoincrement())

  readingTime  Int
  authorId     Int
  title        String
  summery      String
  body         String?
  mainImageUrl String?
  publishedAt  DateTime?
  categories   Category[]
  updatedAt    DateTime   @updatedAt
  published    Boolean    @default(false)
  createdAt    DateTime   @default(now())
  author       User       @relation(fields: [authorId], references: [id])

  @@map("posts")
}

model User {
  id Int @id @default(autoincrement())

  name      String
  posts     Post[]
  avatarUrl String?
  email     String   @unique
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@map("users")
}

model Category {
  id Int @id @default(autoincrement())

  posts     Post[]
  name      String   @unique
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@map("categories")
}
